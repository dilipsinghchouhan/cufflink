<li class="status">
  <% if author %>
    <div class="author"><%= author %> wrote:</div>
  <% end %>

  <div class="status-body"><%= status.body %></div>
  <div class="posted-at"><%= status.time_ago %></div>

  <% unless Status.statuses_liked_by(current_user).include?(status) %>
    <%= button_to "Like", status_responses_url(status), method: :post %>
  <% end %>

  <%= form_tag(status_responses_url(status), method: "post") do %>
    <div>
      <textarea name="response[body]"></textarea>
    </div>
    <input type="submit" value="comment">
  <% end %>


</li>