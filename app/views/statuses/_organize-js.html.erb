<script type="text/javascript">
  $(document).ready( function(root) {

    var OuterLib = root.OuterLib = (root.OuterLib || {});

    var fancyBoxes = OuterLib.fancyBoxes = function() {

      var $ul = $("#outer");
      var $updates = $("#outer > li");

      var $col1 = $("#col-1")
      var $col2 = $("#col-2")

      $updates.each( function(i, update) {
        var col1Height = $col1[0].clientHeight
        var col2Height = $col2[0].clientHeight

        var $col = ((col1Height <= col2Height) ? $col1 : $col2 );

        $col.append(update);
      });

      $ul.remove();

    };
  })
</script>