<h4><%= education.school %></h4>

<% if education.city || education.state %>
  <%= education.city %>
  <%= ", " unless education.state.nil? || education.city.nil? %>
  <%= education.state %>

  <br><br>
<% end %>

<% if education.current_student %>

  <% if education.start_date %>
    <%= education.start_date %> to Present

    <br><br>
  <% else %>
    Currently Enrolled

    <br><br>
  <% end %>

<% else %>

  <% if education.start_date || education.end_date %>
    <%= education.start_date %>
    <%= " to " unless education.start_date.nil? || education.end_date.nil? %>
    <%= education.end_date %>

    <br><br>
  <% end %>

<% end %>

<% if education.area %>
  <b>Area of Study:</b> <%= education.area %>

  <br>
<% end %>

<% if education.degree %>
  <b>Degree:</b> <%= education.degree %>

  <br>
<% end %>

<% if education.awards %>
  <b>Awards:</b><br>
  <p>
    <%= education.awards %>
  </p>

  <br>
<% end %>

<%= link_to "Delete", user_education_url(user, education), method: :delete %>