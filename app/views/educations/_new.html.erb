<% url = position ?
   educations_url + "?position=true" : educations_url %>

<script type="text/javascript">
   $(function() {

// Below is the name of the textfield that will be autocomplete
   $('#school').autocomplete({
// This shows the min length of charcters that must be typed before the autocomplete looks for a match.

           minLength: 1,
// This is the source of the auocomplete suggestions. In this case a list of names from the people controller, in JSON format.
           source: '<%= educations_url(:json) %>?position=true',
 // This updates the textfield when you move the updown the suggestions list, with your keyboard. In our case it will reflect the same value that you see in the suggestions which is the person.given_name.
           focus: function(event, ui) {

               $('#school').val(ui.item.school);
               return false;
           },
// Once a value in the drop down list is selected, do the following:
          select: function(event, ui) {
 // place the person.given_name value into the textfield called 'select_origin'...
                $('#school').val(ui.item.school);
 // and place the person.id into the hidden textfield called 'link_origin_id'.

        $('#education_school').val(ui.item.school);
                return false;
            }
       })
// The below code is straight from the jQuery example. It formats what data is displayed in the dropdown box, and can be customized.
       .data( "ui-autocomplete" )._renderItem = function( ul, item ) {

           return $( "<li></li>" )
               .data( "item.autocomplete", item )
// For now which just want to show the person.given_name in the list.
               .append( "<a>" + item.school + "</a>" )
               .appendTo( ul );
       };
   });
   </script>

<div class="pod third first">

  <%= form_tag(url, method: "post", class: "profile-form",
    id: position ? "company" : "education", remote: true) do %>

      <label><%= position ? "Company" : "School" %> <i>(Required)</i>:<br>
        <input id="school">
        <input type="hidden" id="education_school" name="education[school]"><br>
      </label>

      <label>City:<br>
        <input type="text" name="education[city]"><br>
      </label>

      <label>State:<br>
        <select name="education[state]">
          <option value="">Select a State:</option>

          <% states.each do |state| %>
            <option value="<%= state %>"><%= state %></option>
          <% end %>
            <!-- can current state be selected? -->
        </select><br>
      </label>

      <label>Start Date:<br>
        <input type="date" name="education[start_date]"><br>
      </label>

      <label>Current <%= position ? "Position" : "Student" %> <input type="checkbox" name="education[current_student]"><br>
      </label>

      <label>End Date:<br>
        <input type="date" name="education[end_date]"><br>
      </label>

      <label><%= position ? "Title" : "Area of Study" %>:<br>
        <input type="text" name="education[string_1]"><br>
      </label>

      <label><%= position ? "Industry" : "Degree" %>:<br>
        <% if position %>
          <%= industry_select("education", "none", "string_2") %>
        <% else %>
          <input type="text" name="education[string_2]">
        <% end %>
        <br>
      </label>

      <label><%= position ? "Description" : "Awards & Activites" %><br>
        <textarea name="education[body]"></textarea><br></label>

      <input type="submit"
        value="Add <%= position ? "Position" : "Education" %>"></form>
  <% end %>

</div>