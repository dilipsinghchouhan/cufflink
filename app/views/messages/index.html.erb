<h1><%= @type %> Messages</h1>

<ul id="message-nav" class="nav">

  <li><%= link_to "Oldest First", "?order=created_at-ASC" %></li>
  <li><%= link_to "Newest First", "?order=created_at-DESC" %></li>

</ul>

<ul id="messages-list">
  <% @messages.each do |message| %>
    <li class="group">
      <div class="message-subject pod half first">

        <% delivery = message.get_delivery(current_user) %>

        <% if delivery && delivery.unread? %>
          <% klass = "bold" %>
        <% else %>
          <% klass = "regular" %>
        <% end %>

        <%= link_to message.subject, message_url(message), class: klass  %>

        <% if message.company_id && message.sent_by?(current_user) %>
          <div class="company-attribution">
            (Sent as <%= author_link(message) %>)
          </div>
        <% end %>
      </div>

      <div class="message-author pod fourth">
        <% if @type == "Incoming" %>
          <%= author_link(message) %>
        <% else %>
          <%= message.recipients.map do |user|
            link_to user.name, user_url(user)
          end.join(", ").html_safe %>
        <% end %>
      </div>
      <div class="message-posted-at pod fourth">
        <%= time_ago(message) %>
      </div>

    </li>
  <% end %>
</ul>

