<% unless status.like_count == 0 && on_my_profile %>

  <li class="likes group">

    <% unless Status.status_ids_liked_by(current_user).include?(status.id) ||
       on_my_profile %>

      <%= link_to plus + " like", status_responses_url(status),
        method: :post, remote: true, class: "like-button buttony-link right" %>

    <% end %>

     <%= render partial: "responses/like-count", locals: {
      like_count: status.like_count } %>
  </li>

<% end %>