<script>

$(document).ready( function(root) {
  var OuterLib = root.OuterLib = (root.OuterLib || {});

  $(".nav li a").on("click", function(event) {

    var $clickedLi = $(event.target).parent();
    var target = $clickedLi.attr("data-target");

    var $allLis = $(".nav li")

    if ($clickedLi.hasClass("active")) return;

    $(".profile-box").hide();
    $("#profile-" + target).show();

    if (target.slice(0,7) == "company") {
      $clickedLi = $clickedLi.parent().parent();
    }

    $allLis.removeClass("active");
    $clickedLi.addClass("active");

    if (target == "status" &&
      $clickedLi.attr("data-my-profile") == "false") {
        OuterLib.fancyBoxes();
      }
  });
});

</script>