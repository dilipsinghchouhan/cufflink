<% if type == "user" %>
  <% if object.tagline %>
      <h4><%= object.tagline %></h4>
  <% end %>
<% end %>

<div id="profile-main" class="profile-box">
  <h3>Information</h3>

  <% if type == "company" %>

    <% if object.address1 || object.address1 || object.city || object.state %>
      <b>Location:</b><br>

      <%= object.address1 %>
      <%= raw("<br>") if object.address1 && object.address2 %>
      <%= object.address2 %>

      <%= raw("<br>") if object.city || object.state %>

      <%= city_state(object) %>

      <%= object.zip %>

      <br><br>
    <% end %>

  <% else %>

    <% if object.city || object.state %>
      <b>Location:</b>
      <%= city_state(object) %>

      <br><br>
    <% end %>

  <% end %>

  <% if object.industry %>
    <b>Industry:</b> <%= object.industry %>

    <br>
  <% end %>

  <% if object.summary %>
    <h4>Summary</h4>
      <p>
        <%= object.summary %>
      </p>
  <% end %>

  <%= render partial: "shared/contact-info", locals: { object: object } %>

</div>
